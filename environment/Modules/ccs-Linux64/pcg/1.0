#%Module1.0#####################################################################
##
## modules modulefile
##
## modulefiles/modules.  Generated from modules.in by configure.
##

# global control file
if { [file exists $env(MODULESHOME)/etc/control] } {
   source $env(MODULESHOME)/etc/control;
}

# local variables
set version     1.0
set name        pcg
set platform    Linux
set prefix      /ccs/codes/radtran/vendors/$name$version/$platform
set libdir      $prefix/lib

# module whatis
module-whatis   "PCG - Preconditioned Conjugate Gradient Methods";

# module help
proc ModulesHelp { } {
   global version prefix bindir;

   puts stderr "\tPCG\n";
   puts stderr "\tPCG_LIB_DIR\t= $libdir";
}

if { ![file exists $prefix] } {
   puts stderr "\n[module-info name]: $prefix: No such file or directory.\n";
   break;
   exit 1;
}

setenv PCG_LIB_DIR $libdir
