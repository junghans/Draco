#%Module1.0#####################################################################
##
## modules modulefile
##
## modulefiles/modules.  Generated from modules.in by configure.
##

# global control file
if { [file exists $env(MODULESHOME)/etc/control] } {
   source $env(MODULESHOME)/etc/control;
}

# local variables
set version      1_43_0
set prefix      /ccs/codes/radtran/vendors/Linux64/boost_$version
set libdir      $prefix/lib
set incdir      $prefix/include
set desc        "Boost"

# module whatis
module-whatis   "$desc $version";

# module help
proc ModulesHelp { } {
   global version prefix bindir;

   puts stderr "\t$desc $version\n";
   puts stderr "\tBOOST_LIB_DIR\t= $libdir";
   puts stderr "\tBOOST_INC_DIR\t= $incdir";
}

if { ![file exists $prefix] } {
   puts stderr "\n[module-info name]: $prefix: No such file or directory.\n";
   break;
   exit 1;
}

setenv BOOST_LIB_DIR $libdir
setenv BOOST_INC_DIR $incdir

prepend-path    LD_LIBRARY_PATH            $libdir;
