#%Module1.0#####################################################################
##
## modules modulefile
##
## modulefiles/modules.  Generated from modules.in by configure.
##

# global control file
if { [file exists $env(MODULESHOME)/etc/control] } {
   source $env(MODULESHOME)/etc/control;
}

# local variables
set version     4.6
set prefix      /usr/projects/draco/vendors/idutils-$version
set bindir      $prefix/bin
set mandir      $prefix/share/man

# module whatis
module-whatis	"ID Utils $version";

# module help
proc ModulesHelp { } {
   global version prefix incdir;

   puts stderr "\tAn 'ID database' is a binary file containing a list
\tof file names, a list of tokens, and a sparse matrix
\tindicating which tokens appear in which files.

\tWith this database and some tools to query it, many
\ttext-searching tasks become simpler and faster."; }

if { ![file exists $prefix] } {
   puts stderr "\n[module-info name]: $prefix: No such file or directory.\n";
   break;
   exit 1;
}

prepend-path   PATH           $bindir;
prepend-path   MANPATH        $mandir;
