#%Module1.0#####################################################################
##
## modules modulefile
##
## modulefiles/modules.  Generated from modules.in by configure.
##

# global control file
if { [file exists $env(MODULESHOME)/etc/control] } {
   source $env(MODULESHOME)/etc/control;
}

# local variables
set version     5.8
set prefix      /usr/projects/draco/vendors/ctags-$version
set bindir      $prefix/bin
set mandir      $prefix/share/man

# module whatis
module-whatis	"Exuberant Ctags $version";

# module help
proc ModulesHelp { } {
   global version prefix incdir;

   puts stderr "\tCtags generates an index (or tag) file of language
\tobjects found in source files that allows these
\titems to be quickly and easily located by a text
\teditor or other utility."; }

if { ![file exists $prefix] } {
   puts stderr "\n[module-info name]: $prefix: No such file or directory.\n";
   break;
   exit 1;
}

prepend-path   PATH           $bindir;
prepend-path   MANPATH        $mandir;
