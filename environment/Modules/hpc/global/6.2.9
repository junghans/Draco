#%Module1.0#####################################################################
##
## modules modulefile
##
## modulefiles/modules.  Generated from modules.in by configure.
##

# global control file
if { [file exists $env(MODULESHOME)/etc/control] } {
   source $env(MODULESHOME)/etc/control;
}

# local variables
set version     6.2.9
set prefix      /usr/projects/draco/vendors/global-$version
set bindir      $prefix/bin
set mandir      $prefix/share/man

# module whatis
module-whatis	"GNU Global $version";

# module help
proc ModulesHelp { } {
   global version prefix incdir;

   puts stderr "\tGNU GLOBAL is a source code tagging system that
\tworks the same way across diverse environments
\t(emacs, vi, less, bash, web browser, etc)."; }

if { ![file exists $prefix] } {
   puts stderr "\n[module-info name]: $prefix: No such file or directory.\n";
   break;
   exit 1;
}

prepend-path   PATH           $bindir;
prepend-path   MANPATH        $mandir;
setenv         GTAGSCONF      $prefix/share/gtags/gtags.conf
