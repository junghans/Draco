##-*- Mode: sh -*-
##---------------------------------------------------------------------------##
## .bashrc_ccs4_linux - my bash configuration file upon bash login
##---------------------------------------------------------------------------##

if test -n "$verbose"; then
   echo "In .bashrc_tlcc"
fi

##---------------------------------------------------------------------------##
## ENVIRONMENTS
##---------------------------------------------------------------------------##

# unlimit stack and core dump sizes.
ulimit -s unlimited

# Where is draco
_BINDIR=`dirname "$BASH_ARGV"`
export DRACO_MODULE_DIR=`(cd $_BINDIR/../Modules;pwd)`

#
# MODULES
#
# Use this module command when running bash.
# function module() { eval `/usr/bin/modulecmd bash $*`; }
source /usr/share/modules/init/bash
# Use modules found in the draco directory
module use $DRACO_MODULE_DIR/hpc
module use $DRACO_MODULE_DIR/tu-fe
# Clear any tcsh loaded modules as these are invalid when staring a new shell. 
module purge &> /dev/null
# Load a default set of modules.
module load modules friendly-testing hpc-tools intel-c intel-f totalview
module load openmpi-intel/1.4.3 grace python SuperLU_Dist 
module load lapack/atlas-3.8.3-intel BLACS/1.1-intel ParMetis/3.1.1-intel
module load gsl/1.14-intel trilinos/10.4.0-intel SCALAPACK/1.7-intel
module load hypre/2.0.0-intel gandolf grace-draco ndi openmpi xshow cmake

module list

# CVS
export CVS_RSH=ssh
export CVSROOT=ccscs9:/ccs/codes/radtran/cvsroot
export F90=pgf90
export FC=pgf90

##---------------------------------------------------------------------------##
## end of .bashrc_tlcc
##---------------------------------------------------------------------------##
