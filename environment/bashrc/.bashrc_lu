##-*- Mode: sh -*-
##---------------------------------------------------------------------------##
## .bashrc_ccs4_linux - my bash configuration file upon bash login
##---------------------------------------------------------------------------##

if test -n "$verbose"; then
   echo "In .bashrc_lu"
fi

##---------------------------------------------------------------------------##
## ENVIRONMENTS
##---------------------------------------------------------------------------##

# unlimit stack and core dump sizes.
ulimit -s unlimited

# Where is draco
_BINDIR=`dirname "$BASH_ARGV"`
export DRACO_MODULE_DIR=`(cd $_BINDIR/../Modules;pwd)`

# Where is the vendor directory
if test "${VENDOR_DIR}x" == "x"; then
   if test -d /usr/projects/draco/vendors; then
      VENDOR_DIR=/usr/projects/draco/vendors
   fi
fi

#
# MODULES
#
# 1. Determine if the module command is available
modcmd=`declare -f module`
#    If not found, look for it in /usr/share/Modules (ML)
if test "${modcmd}x" = "x"; then
   if test -f /usr/share/Modules/init/bash; then
      source /usr/share/Modules/init/bash
   else
      echo "ERROR: The module command was not found. No modules will be loaded."
   fi
fi
modcmd=`declare -f module`

# 2. Use modules found in the draco directory

if test "${modcmd}x" = "x"; then
   echo "ERROR: The module command was not found. No modules will be loaded."
else

    module use $DRACO_MODULE_DIR/hpc
    module use $DRACO_MODULE_DIR/tu-fe
    module load friendly-testing 
    module load intel/14.0.2 openmpi/1.6.5 # cudatoolkit
    module load gsl svn 
    module load cmake numdiff git lapack/3.4.1 totalview
    module load trilinos SuperLU_DIST
    module load ParMetis ndi random123 eospac
    module load emacs

fi

##---------------------------------------------------------------------------##
## end of .bashrc_lu
##---------------------------------------------------------------------------##
