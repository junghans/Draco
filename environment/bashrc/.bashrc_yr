##-*- Mode: sh -*-
##---------------------------------------------------------------------------##
## .bashrc_ccs4_linux - my bash configuration file upon bash login
##---------------------------------------------------------------------------##

if test -n "$verbose"; then
   echo "In .bashrc_rr"
fi

##---------------------------------------------------------------------------##
## ENVIRONMENTS
##---------------------------------------------------------------------------##

# unlimit stack and core dump sizes.
ulimit -s unlimited

# Where is draco
_BINDIR=`dirname "$BASH_ARGV"`
export DRACO_MODULE_DIR=`(cd $_BINDIR/../Modules;pwd)`


#
# MODULES
#
source /usr/share/modules/init/bash
module use $DRACO_MODULE_DIR/hpc
module use $DRACO_MODULE_DIR/yr-fe

module load friendly-testing python graphics pgi/9.0-3 grace
module load openmpi-pgi/1.4.3 totalview lapack BLACS SCALAPACK grace-draco
module load gsl/1.14-pgi trilinos SuperLU_DIST hypre ParMetis ndi
module load emacs cmake 

export FC=pgf90

##---------------------------------------------------------------------------##
## end of .bashrc_rr
##---------------------------------------------------------------------------##
