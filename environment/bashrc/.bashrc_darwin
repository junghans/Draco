##-*- Mode: sh -*-
##---------------------------------------------------------------------------##
## .bashrc_darwin - my bash configuration file upon bash login
##---------------------------------------------------------------------------##

if test -n "$verbose"; then
   echo "In .bashrc_darwin"
fi

##---------------------------------------------------------------------------##
## ENVIRONMENTS
##---------------------------------------------------------------------------##

# unlimit stack and core dump sizes.
ulimit -s unlimited

# modules

if test -n "$MODULESHOME"; then
    module load compilers/gcc/4.7.2 mpi cmake python 
    # module load cuda
    if test -d ${DRACO_SRC_DIR}/environment/Modules/darwin; then
        module use ${DRACO_SRC_DIR}/environment/Modules/darwin
        module load numdiff gsl lapack
    fi
fi

export VENDOR_DIR=/projects/opt

# Avoid printing trigraph chars to the screen (eg: ���)
export LANG=en_US

##---------------------------------------------------------------------------##
## end of .bashrc_darwin
##---------------------------------------------------------------------------##
