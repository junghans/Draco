#     module load cmake/2.8.10.2 python 
#     # module load cuda
#     if test -d ${DRACO_SRC_DIR}/environment/Modules/darwin; then
#         module use ${DRACO_SRC_DIR}/environment/Modules/darwin
#         module load numdiff gsl eospac random123 lapack/3.4.1
#     fi
# fi

export VENDOR_DIR=/projects/opt/draco/vendors

# Avoid printing trigraph chars to the screen (eg: ���)
export LANG=en_US

##---------------------------------------------------------------------------##
## end of .bashrc_darwin
