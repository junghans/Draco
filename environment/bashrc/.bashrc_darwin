##-*- Mode: sh -*-
##---------------------------------------------------------------------------##
## .bashrc_darwin - my bash configuration file upon bash login
##---------------------------------------------------------------------------##

if test -n "$verbose"; then
   echo "In .bashrc_darwin"
fi

##---------------------------------------------------------------------------##
## ENVIRONMENTS
##---------------------------------------------------------------------------##

# unlimit stack and core dump sizes.
ulimit -s unlimited

# modules

if test -n "$MODULESHOME"; then
    module load compilers/gcc/4.7.2 mpi cmake/2.8.10.2 python 
    # module load cuda
    if test -d ${DRACO_SRC_DIR}/environment/Modules/darwin; then
        module use ${DRACO_SRC_DIR}/environment/Modules/darwin
        module unload compilers mpi
        module load cmake/2.8.11.1 compilers/gcc/4.7.2
        module load mpi/openmpi-1.6.4-gcc.4.7.2 other/emacs-24.3
        module load other/gnuplot-4.6.1 python/2.7.3 totalview/8.11.0-2
        module load numdiff gsl eospac random123 lapack/3.4.1
    fi
fi

# if test -n "$MODULESHOME"; then
