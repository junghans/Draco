\PassOptionsToClass{xcolor=table,covered,hyperref={bookmarks,colorlinks}}{beamer}
\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\ProcessOptionsBeamer

\mode<presentation>

% Command to insert report number
\newcommand{\@reportnum}{}
\newcommand{\reportnum}[1]{\renewcommand{\@reportnum}{#1}}

\newcommand{\@sigmabox}{}
\newcommand{\sigmalevel}[1]{\renewcommand{\@sigmabox}{
  \begin{beamercolorbox}[wd=0.5\textwidth,sep=6pt,center]{classification color}
    \usebeamerfont{sigma size} SIGMA #1
  \end{beamercolorbox}
}}

\newcommand{\@classificationtext}{}
\newcommand{\classificationtext}[1]{\renewcommand{\@classificationtext}{#1}}
\newcommand{\@ctbox}{
  \begin{beamercolorbox}[wd=0.5\textwidth,center]{classification color}
    \usebeamerfont{rd size}
    \parbox{0.45\textwidth}{\centering \@classificationtext}
  \end{beamercolorbox}
}

\newcommand{\@transbox}{}
\newcommand{\transmissible}[1]{\renewcommand{\@transbox}{
  \begin{beamercolorbox}[wd=0.5\textwidth,sep=5pt,center]{classification color}
    \usebeamerfont{trans size} #1
  \end{beamercolorbox}
}}

\newcommand{\@dctext}{}
\newcommand{\@dc}{}
\newcommand{\@dcfrom}{}
\newcommand{\dc}[1]{
  \renewcommand{\@dc}{#1}
  \@updatedctext
}
\newcommand{\dcfrom}[1]{
  \renewcommand{\@dcfrom}{#1}
  \@updatedctext
}
\newcommand{\@updatedctext}{
  \renewcommand{\@dctext}{
Classified By \@dc

Derived From \@dcfrom
  }
}
\newcommand{\@dcbox}{
  \begin{beamercolorbox}[wd=0.5\textwidth,center]{classification color}
    \usebeamerfont{dc size}
    \parbox{0.45\textwidth}{\@dctext}
  \end{beamercolorbox}
}

\newif\if@class
\newcommand{\@classificationlevel}{}
\newcommand{\classificationlevel}[1]{
  \renewcommand{\@classificationlevel}{#1}
  \@classtrue
}

\newcommand{\@modinsertframenumber}{Slide \insertframenumber{}}
\newcommand{\dissableframenumber}{\renewcommand{\@modinsertframenumber}{}}
\newcommand{\enableframenumber}
  {\renewcommand{\@modinsertframenumber}{Slide \insertframenumber{} }}

\usecolortheme{LANL}
\useoutertheme{LANL}
\useinnertheme{LANL}
\usefonttheme{LANL}

\mode<all>
