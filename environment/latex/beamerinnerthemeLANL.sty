\ProvidesPackage{beamerinnerthemeLANL}[2011/04/01 v 0.03 LANL Beamer Inner Theme]

\mode<presentation>

\DeclareOptionBeamer{shadow}[true]{\def\beamer@themerounded@shadow{#1}}
\ExecuteOptionsBeamer{shadow=false}
\setbeamertemplate{navigation symbols}{}    % Remove navigation symbols
\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{items}[ball] % Make itemized have bullets
\setbeamertemplate{enumerate items}[default]    % Make enumerations have numbers without circles

% Title page
\defbeamertemplate*{title page}{LANL}[1][]
{
  \begin{center}
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    {\usebeamercolor[fg]{title line}\rule[0.5em]{\textwidth}{4pt}}
    
    \if@class
      \begin{beamercolorbox}[sep=6pt,center,#1]{author}
        \usebeamerfont{author}\insertauthor
      \end{beamercolorbox}
      
      \begin{beamercolorbox}[sep=6pt,center,#1]{institute}
        \ifx\insertinstitute\@empty
          \usebeamerfont{institute}\usebeamercolor[fg]{classification color}
          INSTITUTE REQUIRED FOR CLASSIFIED DOCUMENTS, E.G.,
          
          Los Alamos National Laboratory

          PO Box 1663, Los Alamos, NM 87545
        \else  
          \usebeamerfont{institute}\insertinstitute
        \fi
      \end{beamercolorbox}

      \begin{beamercolorbox}[sep=6pt,center,#1]{date}
        \usebeamerfont{date}\insertdate
      \end{beamercolorbox}

      \hbox{\@sigmabox \@transbox}

      \hbox{\@ctbox \@dcbox}

      \begin{beamercolorbox}[sep=10pt,center,#1]{date}
        \usebeamerfont{report number}\@reportnum
      \end{beamercolorbox}
    \else
      \begin{beamercolorbox}[sep=8pt,center,#1]{author}
        \usebeamerfont{author}\insertauthor
      \end{beamercolorbox}

      \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
        \usebeamerfont{institute}\insertinstitute
      \end{beamercolorbox}

      \begin{beamercolorbox}[sep=8pt,center,#1]{date}
        \usebeamerfont{date}\insertdate
      \end{beamercolorbox}

      \begin{beamercolorbox}[sep=8pt,center,#1]{date}
        \usebeamerfont{report number}\@reportnum
      \end{beamercolorbox}
    \fi
  \end{center}
  \vfill
}

\setbeamersize{text margin left=1em,text margin right=1em}

\mode<all>
