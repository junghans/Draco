%%---------------------------------------------------------------------------%%
%% CONVENTIONS FOR STL/GENERIC PROGRAMMING CONCEPT STYLE
%%---------------------------------------------------------------------------%%

%%---------------------------------------------------------------------------%%
%% FONTS

%% concept fonts [sans-serif]

\newcommand{\concept}[1]{{\normalfont\sffamily#1}}

%% computer fonts [typewriter]

\newcommand{\comp}[1]{{\normalfont\ttfamily#1}}

%% underscores

\newcommand{\cu}{\_\,}

%%---------------------------------------------------------------------------%%
%% CONCEPT REQUIREMENTS

\renewcommand{\subsubsection}{\@startsection
  {subsubsection}
  {4}
  {0mm}
  {-\baselineskip}
  {.5\baselineskip}
  {\normalfont\normalsize\bfseries}}

\newenvironment{typelist}{\begin{itemize}}{\end{itemize}}
\newcommand{\typeitem}[3]{\item {\bf#1}\\ \comp{#2}\\ #3}

\newenvironment{deflist}{\begin{itemize}}{\end{itemize}}
\newcommand{\defitem}[1]{\item #1}

\newenvironment{exprlist}{\begin{itemize}}{\end{itemize}}
\newcommand{\expritem}[3]{\item {\bf#1}\\ \comp{#2}\\ #3}

\newenvironment{complist}{\begin{itemize}}{\end{itemize}}
\newcommand{\compitem}[1]{\item #1}

\newcolumntype{Y}{>{\centering\arraybackslash}X}