%% Environments that use the TABULARX package

\newcolumntype{C}{>{\centering\arraybackslash}X}
\newcolumntype{L}{>{\ttfamily}X}

\newcolumntype{a}{>{\ttfamily}l}
\newcolumntype{b}{>{\sffamily\slshape}l}
\newcolumntype{d}{>{\ttfamily}c}

