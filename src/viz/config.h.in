#ifndef __viz_config_h__
#define __viz_config_h__

/* ---------------------------------------- */
/* Windows */
/* ---------------------------------------- */
#if defined(WIN32) || defined(MINGW)

#include <direct.h> // defines _mkdir
#define ENSIGHT_DIR_MODE 1
#define DRACO_MKDIR(m) _mkdir(m)
#define DRACO_RMDIR "del /f/q "

/* ---------------------------------------- */
/* Linux */
/* ---------------------------------------- */
#else

#include <unistd.h>
#define ENSIGHT_DIR_MODE S_IRWXU | S_IRWXG | S_IRWXO
#define DRACO_MKDIR(m) mkdir(m,ENSIGHT_DIR_MODE)
#define DRACO_RMDIR "rm -rf "

#endif

#endif /* __viz_config_h__ */

