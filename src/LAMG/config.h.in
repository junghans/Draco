#ifndef __LAMG_config_h__
#define __LAMG_config_h__

/*
 * Define the type for the F90 integer
 * This should be defined to be equivalent
 * to a FORTRAN integer*4
 */
#undef RTT_F90_INTEGER

/*
 * Define the type for the F90 double.
 * This should be defined to be equivalent
 * to a FORTRAN real*8
 */
#undef RTT_F90_DOUBLE

/*
 * The following macros define how to call FORTRAN
 * from C and C++
 */
#define CCALLSFSUB_SUFFIX  1
#define CCALLSFSUB_PREFIX  2
#define CCALLSFSUB_NONE    3
#define CCALLSFSUB_UPPER  11
#define CCALLSFSUB_LOWER  12

/*
 * CCALLSFSUB_CASE is defined as either CCALLSFSUB_UPPER, CCALLSFSUB_LOWER
 */
#undef CCALLSFSUB_CASE
/*
 * CCALLSFSUB_METHOD is defined as either CCALLSFSUB_SUFFIX, CCALLSFSUB_PREFIX
 * or CCALLSFSUB_NONE
 */
#undef CCALLSFSUB_METHOD


#endif                          /* __LAMG_config_h__ */

/*---------------------------------------------------------------------------*/
/*                              end of LAMG/config.h */
