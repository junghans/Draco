AC_INIT(Quadrature.hh)
AC_CONFIG_AUX_DIR(../../config)
AC_CONFIG_HEADER(quadrature/config.h:config.h.in)
package="quadrature"

AC_MPI_SETUP(pkg)
dnl AC_POOMA_SETUP(pkg)

AC_INSTALL_HEADERS
AC_INSTALL_LIB
AC_NEEDS_LIBS(ds++)
AC_NEEDS_LIBS_TEST(UnitTestFrame c4)

dnl must run as "1" instead of scalar because UnitTestFrame assumes
dnl that the job is parallel.
AC_RUNTESTS(tQuadrature, 1)

AC_DRACO_ENV

AC_OUTPUT(Makefile:../../config/Makefile.package.in \
          test/Makefile:../../config/Makefile.test.in)

