AC_INIT(RTT_Format.hh)
AC_CONFIG_AUX_DIR(../../config)
AC_CONFIG_HEADER(meshReaders/config.h:config.h.in)
package="meshReaders"

dnl VENDOR SETUPS
AC_MPI_SETUP(pkg)
AC_SHMEM_SETUP(pkg)
dnl AC_SPRNG_SETUP(pkg)
dnl AC_PCGLIB_SETUP(pkg)

AC_INSTALL_HEADERS
AC_INSTALL_LIB
AC_NEEDS_LIBS(c4 ds++)
AC_NEEDS_LIBS_TEST(UnitTestFrame)

AC_RUNTESTS(TestElementDefinition TestHexMeshReader TestRTT_Format, scalar)

dnl DRACO SETUP
AC_DRACO_ENV

AC_OUTPUT(Makefile:../../config/Makefile.package.in   \
          test/Makefile:../../config/Makefile.test.in \
	  test/cube.mesh:test/cube.mesh.in \
	  test/quad.mesh:test/quad.mesh.in \
 	  test/slab.mesh:test/slab.mesh.in \
          test/rttdef.mesh:test/rttdef.mesh.in)

