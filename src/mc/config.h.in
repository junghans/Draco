#ifndef rtt_mc_config_h
#define rtt_mc_config_h

/* integer types */
#undef SIZEOF_INT
#undef SIZEOF_LONG
#undef SIZEOF_LONG_LONG

/* set the eight byte int type */
#if SIZEOF_INT == 8
#define EIGHT_BYTE_INT_TYPE int
#elif SIZEOF_LONG == 8
#define EIGHT_BYTE_INT_TYPE long
#elif SIZEOF_LONG_LONG == 8
#define EIGHT_BYTE_INT_TYPE long long
#endif

#endif                          /* rtt_mc_config_h */

