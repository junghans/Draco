#!/bin/sh
##---------------------------------------------------------------------------##
## draco
## draco help script
##---------------------------------------------------------------------------##

##---------------------------------------------------------------------------##
## variables
##---------------------------------------------------------------------------##

prefix='@prefix@'

##---------------------------------------------------------------------------##
## functions
##---------------------------------------------------------------------------##

draco_usage()
{
   echo "Usage: draco [--help | --version | --prefix]"
}

##---------------------------------------------------------------------------##

draco_version()
{
   echo draco-1_0_0
}

##---------------------------------------------------------------------------##

draco_help()
{
   draco_usage
}

##---------------------------------------------------------------------------##

draco_prefix()
{
    echo $prefix
}

##---------------------------------------------------------------------------##
## main script
##---------------------------------------------------------------------------##

for draco_option in $*
do
   case "$draco_option" in

   --version | -version)
        draco_version
        ;;

   --help | -help)
        draco_help
        ;;
    --prefix | -prefix)
	draco_prefix
	;;
   *)
        draco_usage
	exit 1;
        ;;
   esac
done

##---------------------------------------------------------------------------##
## end of draco
##---------------------------------------------------------------------------##

