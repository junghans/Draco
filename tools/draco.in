#!/bin/sh
##---------------------------------------------------------------------------##
## draco
## draco help script
##---------------------------------------------------------------------------##

##---------------------------------------------------------------------------##
## variables
##---------------------------------------------------------------------------##

prefix='@prefix@'
configure='@configure_command@'

##---------------------------------------------------------------------------##
## functions
##---------------------------------------------------------------------------##

draco_usage()
{
   echo "Usage: draco [--help | --version | --prefix | --configure]"
}

##---------------------------------------------------------------------------##

draco_version()
{
   echo draco-5_16_0
}

##---------------------------------------------------------------------------##

draco_config()
{
   echo $configure
}

##---------------------------------------------------------------------------##

draco_help()
{
   draco_usage
}

##---------------------------------------------------------------------------##

draco_prefix()
{
    echo $prefix
}

##---------------------------------------------------------------------------##
## main script
##---------------------------------------------------------------------------##

for draco_option in $*
do
   case "$draco_option" in

   --version | -version)
        draco_version
        ;;

   --help | -help)
        draco_help
        ;;
    --prefix | -prefix)
	draco_prefix
	;;
    --configure | -configure)
	draco_config
	;;
   *)
        draco_usage
	exit 1;
        ;;
   esac
done

##---------------------------------------------------------------------------##
## end of draco
##---------------------------------------------------------------------------##

