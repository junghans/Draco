\section vendor_how2build Building vendor code:

\subsection vendor_how2build_gsl GSL - PGI - ccscs8

\code
% CC=/ccs/opt/x86_64/pgi_7.0-5/linux86-64/7.0-5/bin/pgcc
% CFLAGS="-fPIC -O2"
% cd /ccs/codes/radtran/vendors/gsl/Linux64-pgi/b
% ../s/gsl-1.8/configure --prefix=/ccs/codes/radtran/vendors/gsl/Linux64-pgi
% make -j4 install
\endcode

\subsection vendor_how2build_atlas ATLAS - Intel - turing

\code
% /usr/projects/draco/vendors/atlas/atlas3.8.3/ATLAS/configure -Si cputhrchk 
0 --prefix=/usr/projects/draco/vendors/atlas/Linux64/openmpi133-intel100023-i
ntel100023 --with-netlib-lapack=/opt/Ptools/lapack/3.1.1/lib/liblapack.a -C i
f ifort -F if '-std90 -warn unused -vec-report0 -ip -fpe0 -fp-model precise -
fp-speculation strict -ftz -fpic -O3'
% make nj=2
% make install
\endcode
