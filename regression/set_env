##---------------------------------------------------------------------------##
## DRACO VENDORS

# MPI
if [ "`uname -m`" == "x86_64" ]; then
     export MPI_DIR=/ccs/codes/mpi/openmpi/Linux64/1.3.3/bin
     MPIRUN='/ccs/codes/mpi/openmpi/Linux64/1.3.3/bin/mpirun'
     MPI_INC_DIR='/ccs/codes/mpi/openmpi/Linux64/1.3.3/include'
     MPI_LIB_DIR='/ccs/codes/mpi/openmpi/Linux64/1.3.3/lib'
     MPI_TAG='openmpi'
else
     export MPI_DIR=/ccs/codes/mpi/bin
     . /ccs/codes/mpi/bin/mpich.sh shmem-lahey
fi

# Aztec
export AZTEC_INC_DIR=/ccs/codes/radtran/vendors/aztec/include
export AZTEC_LIB_DIR=/ccs/codes/radtran/vendors/aztec/`uname`/lib/mpi

# LA-Pack
if [ "`uname -m`" == "x86_64" ]; then
    export LAPACK_LIB_DIR=/ccs/codes/radtran/vendors/atlas/Linux64/lib
else
    export LAPACK_LIB_DIR=/ccs/codes/radtran/vendors/atlas/Linux/lib
fi

# Metis
export METIS_INC_DIR=/ccs/codes/radtran/vendors/metis/include
export METIS_LIB_DIR=/ccs/codes/radtran/vendors/metis/lib

# PCGLIB
export PCG_LIB_DIR=/ccs/codes/radtran/vendors/pcg/`uname`/lib

# Gandolf
if [ "`uname -m`" == "x86_64" ]; then
    export GANDOLF_LIB_DIR=/ccs/codes/radtran/vendors/gandolf/Linux64/lib
else
    export GANDOLF_LIB_DIR=/ccs/codes/radtran/vendors/gandolf/Linux/lib
fi

# EOSPAC5
export EOSPAC5_LIB_DIR="/ccs/codes/radtran/vendors/eospac/`uname`/lib"
export SESPATHU=/ccs/codes/radtran/physical_data/eos
export SESPATHC=/ccs/codes/radtran/physical_data/eos

# XMGRACE
if [ "`uname -m`" == "x86_64" ]; then
    export GRACE_INC_DIR=/ccs/opt/x86_64/grace/include
    export GRACE_LIB_DIR=/ccs/opt/x86_64/grace/lib
else
    export GRACE_INC_DIR=/ccs/opt/x86/grace/include
    export GRACE_LIB_DIR=/ccs/opt/x86/grace/lib
fi

# GNU Scientific Library
if [ "`uname -m`" == "x86_64" ]; then
    export GSL_INC_DIR=/ccs/codes/radtran/vendors/gsl/Linux64/1.13/include
    export GSL_LIB_DIR=/ccs/codes/radtran/vendors/gsl/Linux64/1.13/lib
else
    export GSL_INC_DIR=/ccs/codes/radtran/vendors/gsl/Linux/include
    export GSL_LIB_DIR=/ccs/codes/radtran/vendors/gsl/Linux/lib
fi
